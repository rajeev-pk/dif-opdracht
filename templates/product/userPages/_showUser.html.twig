<div class="row">
    <div class="col-sm-12 col-md-6">
        <h2>{{ product.title }}</h2>
        <p>{{ product.description }}</p>
        <p>â‚¬ {{ product.price }}</p>
        {% if(is_granted('ROLE_ADMIN')) %}
            <div class="d-flex flex-column">
                <div>
                    <a class="btn btn-danger" href="{{ path('view_products_index') }}">Go back</a>
                </div>
                <div class="mt-3">
                    <a href="{{ path('product_show', {id: product.id}) }}" class="btn btn-warning">Edit</a>
                </div>
            </div>

        {% else %}
            <a href="{{ path('product_index') }}">Go back</a>
        {% endif %}
    </div>
    <div class="col-sm-12 col-md-6 d-flex justify-content-md-end justify-content-start mt-md-0 mt-5">
        <img src="{{ vich_uploader_asset(product, 'imageFile') }}" width="300px" alt="">
    </div>
</div>
